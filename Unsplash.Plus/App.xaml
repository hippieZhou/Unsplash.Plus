                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Data="M21.9824 1L10.9824 12M21.9824 1L14.9824 21L10.9824 12M21.9824 1L1.98242 8L10.9824 12"
                                Stretch="Uniform"
                                Stroke="{TemplateBinding Foreground}"
