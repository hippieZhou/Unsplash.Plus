            <FontFamily x:Key="RobotoMonoMedium">/Assets/Fonts/RobotoMono-Medium.ttf#Roboto Mono</FontFamily>
            <FontFamily x:Key="RobotoMonoRegular">/Assets/Fonts/RobotoMono-Regular.ttf#Roboto Mono</FontFamily>

            <x:Boolean x:Key="UseSystemFocusVisuals">False</x:Boolean>

            <animations:AnimationCollection x:Key="ImplicitOffsetAnimation">
                <animations:OffsetAnimation Duration="0:0:0.4" />
            </animations:AnimationCollection>

            <converters:HexStringToBrushConverter x:Key="HexStringToBrushConverter" />
            <toolkitconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter">
                <toolkitconverters:BoolToVisibilityConverter.TrueValue>
                    <Visibility>Visible</Visibility>
                </toolkitconverters:BoolToVisibilityConverter.TrueValue>
                <toolkitconverters:BoolToVisibilityConverter.FalseValue>
                    <Visibility>Collapsed</Visibility>
                </toolkitconverters:BoolToVisibilityConverter.FalseValue>
            </toolkitconverters:BoolToVisibilityConverter>


            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
            </Style>

            <Style x:Key="Style-Icon-Base" TargetType="ContentControl">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="MaxWidth" Value="24" />
                <Setter Property="MaxHeight" Value="24" />
            </Style>

            <!--  Credit: Icon vectors are from https://github.com/feathericons/feather  -->
            <Style
                x:Key="Style-Icon-Plus"
                BasedOn="{StaticResource Style-Icon-Base}"
                TargetType="ContentControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Path
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Data="M5.4375 1.2373V9.2373M1.4375 5.2373H9.4375"
                                Stretch="Uniform"
                                Stroke="{TemplateBinding Foreground}"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="2" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style
                x:Key="Style-Icon-Minus"
                BasedOn="{StaticResource Style-Icon-Base}"
                TargetType="ContentControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Path
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Data="M1.43719 1.23743H9.43719"
                                Stretch="Uniform"
                                Stroke="{TemplateBinding Foreground}"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
