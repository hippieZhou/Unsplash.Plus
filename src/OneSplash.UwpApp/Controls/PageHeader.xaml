<UserControl
    x:Class="OneSplash.UwpApp.Controls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OneSplash.UwpApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="headerControl"
    MinHeight="72"
    Margin="0"
    Padding="0"
    d:DesignHeight="72"
    d:DesignWidth="400"
    FontSize="24"
    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
    mc:Ignorable="d">

    <Grid
        MinHeight="{Binding ElementName=headerControl, Path=MinHeight}"
        Padding="{x:Bind HeaderPadding, Mode=OneWay}"
        VerticalAlignment="Top"
        d:MinHeight="72"
        Background="{Binding ElementName=headerControl, Path=Background}"
        Opacity="{Binding ElementName=headerControl, Path=BackgroundColorOpacity}">
        <TextBlock
            x:Name="TitleTextBlock"
            VerticalAlignment="Center"
            FontFamily="{StaticResource MontserratBold}"
            FontSize="{Binding ElementName=headerControl, Path=FontSize}"
            Foreground="{Binding ElementName=headerControl, Path=Foreground}"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="{x:Bind Title, Mode=OneWay}"
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap" />
    </Grid>
</UserControl>
